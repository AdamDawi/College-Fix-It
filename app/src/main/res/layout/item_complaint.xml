<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="complaint"
            type="com.example.collegefixit.model.Complaint" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/complaintTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{complaint.title}"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/complaintDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{complaint.description}"
            android:layout_below="@id/complaintTitle" />

        <Button
            android:id="@+id/upvoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upvote"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/upvoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(complaint.upvotes)}"
            android:layout_toStartOf="@id/upvoteButton"
            android:layout_alignBottom="@id/upvoteButton" />

    </RelativeLayout>
</layout>
